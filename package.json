{
  "name": "mike-bo",
  "version": "0.4.79",
  "description": "Mike BO is an assistant bot work for Huan",
  "main": "index.js",
  "engines": {
    "node": "10.4.1"
  },
  "scripts": {
    "dev": "WECHATY_PUPPET=wechaty-puppet-padplus ts-node src/main.ts",
    "lint": "npm run lint:es && npm run lint:ts",
    "lint:ts": "tsc --noEmit",
    "start": "export $(xargs < .env) && ts-node src/main.ts",
    "test": "npm run lint && npm run test:unit",
    "test:smoke": "ts-node tests/fixtures/smoke-testing.ts",
    "test:unit": "blue-tape -r ts-node/register \"src/**/*.spec.ts\" \"src/*.spec.ts\" \"tests/*.spec.ts\" \"tests/**/*.spec.ts\"",
    "lint:es": "eslint --ignore-pattern tests/fixtures/ '{bin,examples,scripts,src,tests}/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chatie/heroku-wechaty-getting-started.git"
  },
  "author": "Huan LI <zixia@zixia.net>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/chatie/heroku-wechaty-getting-started/issues"
  },
  "homepage": "https://github.com/chatie/heroku-wechaty-getting-started#readme",
  "dependencies": {
    "@chatie/tsconfig": "^0.10.1",
    "@hapi/hapi": "^18.4.0",
    "@types/hapi__hapi": "^19.0.1",
    "@types/raven": "^2.5.1",
    "@types/read-pkg-up": "^6.0.0",
    "brolog": "^1.6.5",
    "dotenv": "^8.2.0",
    "finis": "^0.4.4",
    "lru-cache": "^5.1.1",
    "moment": "^2.24.0",
    "qrcode-terminal": "^0.12.0",
    "read-pkg-up": "^7.0.1",
    "wechaty": "^0.41.3",
    "wechaty-plugin-contrib": "^0.10.1",
    "wechaty-puppet-hostie": "^0.8.3",
    "wechaty-puppet-padplus": "^0.7.15"
  },
  "devDependencies": {
    "@chatie/eslint-config": "^0.8.1",
    "@chatie/git-scripts": "^0.6.2",
    "@types/lru-cache": "^5.1.0",
    "tstest": "^0.4.2"
  },
  "git": {
    "scripts": {
      "pre-push": "npx git-scripts-pre-push"
    }
  }
